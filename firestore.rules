rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita para usuários autenticados (incluindo anônimos)
    match /artifacts/{projectId}/users/{userId}/contact_messages/{document} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra mais permissiva para desenvolvimento (remova em produção)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}